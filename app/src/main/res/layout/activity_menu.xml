<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_app"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/header_app"
                android:adjustViewBounds="true"/>
            <ImageButton
                android:id="@+id/btn_sejarah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/btn_sejarah"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#0fff"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:id="@+id/btn_materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/btn_materi"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#0fff"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:id="@+id/btn_edu_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/btn_edu_video"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#0fff"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:id="@+id/btn_alquran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/btn_alquran"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#0fff"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:id="@+id/btn_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/btn_report"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#0fff"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:id="@+id/btn_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/btn_quiz"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#0fff"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>